{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
